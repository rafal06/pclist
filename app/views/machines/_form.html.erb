<%= form_for @machine do |f| %>
  <div class="mt-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, required: "required", class: "form-control" %>
  </div>
  <div class="mt-3">
    <%= f.label :type, class: "form-label" %>
    <%= f.text_field :type, class: "form-control" %>
  </div>
  <div class="mt-3">
    <%= f.label :brand, class: "form-label" %>
    <%= f.text_field :brand, class: "form-control" %>
  </div>
  <div class="mt-3">
    <%= f.label :model, class: "form-label" %>
    <%= f.text_field :model, class: "form-control" %>
  </div>
  <div class="mt-3">
    <%= f.label :release_date, class: "form-label" %>
    <%= f.date_field :release_date, class: "form-control" %>
  </div>
  <div class="mt-3">
    <%= f.label :production_date, class: "form-label" %>
    <%= f.date_field :production_date, class: "form-control" %>
  </div>

  <div class="mt-3">
    <p class="form-label pe-none"><%= :condition.capitalize %></p>
    <%= stylesheet_link_tag "star-rating" %>

    <div class="stars">
      <%= f.radio_button :condition, 5, class: "star star-5" %>
      <%= f.label " ", for: "machine_condition_5", class: "star star-5" %>

      <%= f.radio_button :condition, 4, class: "star star-4" %>
      <%= f.label " ", for: "machine_condition_4", class: "star star-4" %>

      <%= f.radio_button :condition, 3, class: "star star-3" %>
      <%= f.label " ", for: "machine_condition_3", class: "star star-3" %>

      <%= f.radio_button :condition, 2, class: "star star-2" %>
      <%= f.label " ", for: "machine_condition_2", class: "star star-2" %>

      <%= f.radio_button :condition, 1, class: "star star-1" %>
      <%= f.label " ", for: "machine_condition_1", class: "star star-1" %>
    </div>
  </div>

  <div class="mt-3 row">
    <div class="col">
      <%= f.label :image, class: "form-label" %>
      <%= f.file_field :image, class: "form-control" %>
    </div>
    <% if @machine.image.attached? %>
      <div class="col-auto">
        <%= image_tag machine_image(@machine, 200), height: "75px", class: "rounded-2" %>
      </div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, rows: "10", class: "form-control" %>
  </div>
  <div class="mt-3">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
