<div class="row mt-5">

  <div class="col-md-auto d-flex flex-md-column mb-4">
    <%= image_tag user_avatar(@user, 200), size: 200, alt: @user.username, class: "rounded-circle me-4 me-md-0" %>
    <div class="user_show_text">
      <h2 class="mt-4 text-wrap"><%= @user.username %></h2>
      <p class="mt-3 text-wrap"><%= @user.bio %></p>
      <% if user_signed_in? && current_user.email == @user.email %>
        <%= link_to "Edit", edit_user_registration_path, class: "btn btn-outline-secondary w-100 text-center mt-3" %>
      <% end %>
    </div>
  </div>

  <div class="col-md">

    <div class="row d-flex flex-wrap g-3 g-md-2 overflow-hidden">
      <% if @machines.blank? %>
        <p class="text-center">This user has no machines added</p>
      <% end %>

      <% @machines.each do |machine| %>
        <a href="<%= machine_path(@user.username, machine.name) %>" class="d-block col-12 col-md-6 col-lg-6 text-decoration-none text-dark">
          <div class="d-flex flex-wrap border border-secondary rounded-3 p-3 bg-light">

            <img src="https://placehold.co/800x600" class="col-md-3 img-fluid cover rounded-1 me-3 mb-3 mb-md-0">

            <div class="col">
              <h3 class="fs-4"><%= machine.name %></h3>
              <p class="m-0"><%= truncate machine.description, length: 64 %></p>
            </div>

          </div>
        </a>
      <% end %>
    </div>

  </div>
</div>
